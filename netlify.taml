[build]
  command = "pip install -r requirements.txt"
  functions = "functions"

[dev]
  command = "uvicorn app.main:app --reload"

# Redirigir todo el tr치fico entrante a la funci칩n serverless de Python
[[redirects]]
  from = "/*"
  to = "/.netlify/functions/api"
  status = 200

# Excepci칩n para la documentaci칩n (opcional, ayuda a veces con swagger)
[[redirects]]
  from = "/docs"
  to = "/.netlify/functions/api/docs"
  status = 200